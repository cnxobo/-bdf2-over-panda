<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	">

	<bean id="bdf2.dataSourceRegister" class="com.bstek.bdf2.core.orm.DataSourceRegister"
		abstract="true" />
	<bean id="bdf2.dataSourceRepository" class="com.bstek.bdf2.core.orm.DataSourceRepository"></bean>
	<bean id="bdf2.contextHolder" class="com.bstek.bdf2.core.context.ContextHolder"></bean>

	<bean parent="dorado.viewConfigFactoryRegister">
		<property name="viewNamePattern" value="**" />
		<property name="viewConfigFactory">
			<bean parent="dorado.xmlViewConfigDefinitionFactory">
				<property name="pathPrefix" value="classpath:" />
			</bean>
		</property>
	</bean>
</beans>